Page {
  display: flex;
  flex-direction: column;
  background: rgba(187, 187, 187, 0.678);
  box-sizing: border-box;
} 
.user{
  width: 100vw;
  height: 30vh;
  background-color: white;
}
.menu{
  width: 100vw;
  height:11vh;
  background-color: rgb(248, 245, 245);
}

.menu image{
  width:100rpx;
  height: 100rpx;
}

.user image{
  border-radius: 5px;
  margin-top: 10vh;
  width: 15vw;
  height: 15vw;
}
.column_view{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.row_view{
  display: flex;
  align-items: center;
  flex-direction: row;
}
.box{
  width: 100%;
  height:100%;
  display: flex;
  align-items: center;
  flex-direction: column;

}