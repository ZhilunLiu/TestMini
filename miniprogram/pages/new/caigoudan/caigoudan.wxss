/* miniprogram/pages/cart/cart.wxss */
Page {
  display: flex;
  flex-direction: column;
  background: rgba(187, 187, 187, 0.678);
  box-sizing: border-box;
} 

.row_flex{
  flex-direction: row;
  display: flex;
}
.column_flex{
  flex-direction: column;
  display: flex;
}
.itemName{
  margin-top:3vh;
  font-size:1rem;
}
.desc{
  margin-top:1vh;
  font-size:1rem;
}
.price{
  margin-left: 15vw;
  font-size:1rem;
  color:coral;
}
.selectIcon{
  display: flex;
  justify-content: center;
  align-items: center;
}

.items{
  margin-top:5vh;
  margin-left:5vw;
  margin-right:5vw;
  border-radius: 5px;
  background-color: white;
}

.icon{
  margin-top: 2vw;
  margin-left: 2vw;
  width: 100%;
  height: 100%;
}
.icon image{
  width: 1rem;
  height: 1rem;
}

.num{
  margin-left: 10vw;
  width: 100%;
  height: 100%;
}

.num image{
  width: 1rem;
  height: 1rem;
}

.num text{
  margin-left: 3vw;
  margin-right: 3vw;
  font-size: 1rem;
  font-weight: 500;
}

.cart-thumb{
  width:175px;
  height:120px;
}

.fixed_view{
  position: fixed;
  bottom: 0;
  width: 100vw;
  height:8vh;
  background-color: white;
  display: flex;
  align-items: center;
}
.fixed_view text{
  margin-left: 2vw;
}
.totalPrice{
  margin-left: 48vw;
  color:coral;

}
.selectAllIcon{
  margin-left: 2vw;
}
.pay{
  margin-left: 2vw;
  border-radius: 5px;
  background-color: coral;
  width:18vw;
  height: 6vh;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}
