/*总体主盒子*/  
.container {  
  position: relative;  
  width: 100%;  
  height: 100%;  
  background-color: rgba(255, 255, 255, 0.363);  
  color: #939393;  
}

 /*顶部导航*/  
.nav_top{  
  /* text-align: center; */
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  background-color: #f5f5f5;
  z-index:auto；
}

.searchStyle{
  width: 100%;
}

.nav_items{  
  width: 80vw;
  height: auto;
  margin:5vh auto;
  border: white;
  box-shadow: 5px 5px 5px grey;
  border-radius: 15px;
  display: flex;
  flex-direction: column;
  text-align: center;
  background-color: white;
}  

.itemImage{  
width: 75vw;
}  

.itemName{
  color: black;
  font-weight: bold;
  font-size: medium;
}

.itemDesc{
  font-size: medium;
}

.itemPrice{
  font-size: large;
  color: black;
  font-weight: bold;
}

.price{
  display: flex;
  flex-direction: row;
}

.price text{
  font-size : small;
  color:black;
  font-weight: bold;
}

.flexLeft{
  flex: 1;
  text-align: left;
  margin-left: 5vw;
}