Page {
  display: flex;
  flex-direction: column;
  background: rgba(187, 187, 187, 0.678);
  box-sizing: border-box;
} 

.row_flex{
  flex-direction: row;
  display: flex;
  align-items: center;
}
.column_flex{
  flex-direction: column;
  display: flex;
}
.name{
  margin-top:2vh;
  margin-left:4vw;
  font-size: 5vw;
}

.phone{
  margin-top:2vh;
  margin-left:4vw;
  font-size: 3vw;
  color: rgba(128, 128, 128, 0.795);

}

.detail{
  margin-left: 4vw;
  margin-top:2vh;
}

.address{
  margin-top:5vw;
  margin-left:5vw;
  margin-right:5vw;
  width: 90vw;
  height: 40vw;
  border-radius: 5px;
  background-color: white;
}

.fixed_view{
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
}

.fixed_view image{
  width: 100rpx;
  height: 100rpx;
}